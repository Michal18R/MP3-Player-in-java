import javax.swing.*;
import java.awt.*;


public class Player {


        // tworzę przyciski
        JButton p = new JButton("Start");
        JButton q = new JButton("Pause");
        JButton r = new JButton("Resume");
        JButton t = new JButton("Choose song");
        Player(){
            prepareGUI();

        }

    public void prepareGUI(){

        // tworzę ogólne okienko programu
        JFrame frame = new JFrame();
        //tytuł
        frame.setTitle("MP3 PLAYER");
        frame.getContentPane().setLayout(null);
        //kolor tła
        frame.getContentPane().setBackground(Color.blue);
        //rozmiar okna
        frame.setSize(520,300);
        //centrowanie okna programu
        frame.setLocationRelativeTo(null);
        frame.setVisible(true);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

        //ustalanie rozmiarów i umiejscowienie przycisków wzgłedem okienka programu
        p.setLayout(null);
        p.setBounds(40,150,100,60);
        frame.add(p);

        q.setLayout(null);
        q.setBounds(200,150,100,60);
        frame.add(q);

        r.setLayout(null);
        r.setBounds(360,150,100,60);
        frame.add(r);

        t.setLayout(null);
        t.setBounds(190,50,120,60);
        frame.add(t);


    }

    public static void main(String...args){
        new Player();
    }
}
