import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.*;
import java.awt.*;


public class MP3 {

 private JButton button;

 public MP3(){
	   
	  
	  JFrame frame = new JFrame("MP3 player"); // okno i contentPane
	  
	  frame.setLayout(new GridLayout());
	 
	  frame.setSize(800,800);
      JPanel p = new JPanel();
      button = new JButton("Start");
      p.setLayout(null);
      button.setBounds(40,100,100,60);
      p.add(button);

      
      
      
      JPanel q = new JPanel();
      button = new JButton("Stop");
      q.setLayout(null);
      button.setBounds(80,100,100,60);
      q.add(button);

 
     
      
      JPanel r = new JPanel();
      button = new JButton("Rewind");
      r.setLayout(null);
      button.setBounds(120,100,100,60);
      r.add(button);
       
      frame.getContentPane().add(p);
      frame.getContentPane().add(q);
      frame.getContentPane().add(r);
      frame.setLocationRelativeTo(null);
      frame.setVisible(true);
  

      
      
     }
   private void setLayout(String string) {
	// TODO Auto-generated method stub
	
}
   public static void main(String...args){
	   new MP3();
   }
}
       
